<!DOCTYPE html>
<html lang="en">
  <%- include('common/head') %>
  <body>
    <%- include('common/nav') %>
    <div class="main-container">
      <h1 class="heading">Create Event</h1>
      <main>
        <form action="/api/event/create" method="post">
          <p><%= message %></p>

          <div class="input-fields">
            <span class="legend">
              <label for="Eventname"
                >Event Name:
                <span id="eventError" class="error-span"></span>
              </label>
              <input
                type="text"
                name="name"
                id="name"
                placeholder="Event name"
                onchange="validateEvent('name', 'eventError')"
                oninput="validateEvent('name', 'eventError')"
                onkeyup="validateEvent('name', 'eventError')"
                required
              />
            </span>

            <span class="legend">
              <label for="date"
                >Date:
                <span id="dateError" class="error-span"></span>
              </label>
              <input
                type="date"
                name="date"
                id="date"
                placeholder=""
                onchange="validateDate('date', 'dateError')"
                oninput="validateDate('date', 'dateError')"
                onkeyup="validateDate('date', 'dateError')"
                required
              />
            </span>

            <span class="legend">
              <label for="id"
                >Location:
                <span id="locationError" class="error-span"></span>
              </label>
              <input
                type="text"
                name="location"
                id="location"
                placeholder="Location"
                onchange="validateLocation('location', 'locationError')"
                oninput="validateLocation('location', 'locationError')"
                onkeyup="validateLocation('location', 'locationError')"
                required
              />
            </span>

            <span class="legend">
              <label for="branch">Branch: </label>
              <select name="branch" id="branch">
                <option value="Tshwane">Tshwane</option>
                <option value="Johannesburg">Johannesburg</option>
                <option value="Gauteng Provincial Office">
                  Gauteng Provincial Office
                </option>
                <option value="Ekurhuleni">Ekurhuleni</option>
                <option value="Mamelodi">Mamelodi</option>
                <option value="Attredgeville">Attredgeville</option>
                <option value="Olievenhoutbosch">Olievenhoutbosch</option>
                <option value="Cullinan">Cullinan</option>
                <option value="Bronkhorspruit">Bronkhorspruit</option>
                <option value="Mabopane">Mabopane</option>
              </select>
            </span>
            <button type="submit" id="form-submit">Submit</button>
          </div>
        </form>
      </main>
    </div>

    <%- include('common/sideMenu') %> <%- include('common/footer') %> <%-
    include('common/script') %> <%- include('common/validators') %>
  </body>
</html>
