<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="index.js" defer></script>
    <link rel="stylesheet" href="style.css" />
    <title>Logs</title>
  </head>
  <body>
    <nav>
      <div class="logo">
        <img src="/seda logo.jpg" alt="Seda Logo" class="logo-img" />
      </div>
      <svg
        id="menu-btn"
        xmlns="http://www.w3.org/2000/svg"
        height="24"
        viewBox="0 0 24 24"
        width="24"
      >
        <path d="M0 0h24v24H0V0z" fill="none" />
        <path
          d="M4 18h16c.55 0 1-.45 1-1s-.45-1-1-1H4c-.55 0-1 .45-1 1s.45 1 1 1zm0-5h16c.55 0 1-.45 1-1s-.45-1-1-1H4c-.55 0-1 .45-1 1s.45 1 1 1zM3 7c0 .55.45 1 1 1h16c.55 0 1-.45 1-1s-.45-1-1-1H4c-.55 0-1 .45-1 1z"
        />
      </svg>
    </nav>
    <div class="main-container">
      <h1 class="heading">Visitors Register 
        
        </h1>
      <main>
        <% if (messagge) { %>
          <%= <h4>message</h4> %>
        <% } %>
        <form action="/api/visitor/new" method="post">
          <span class="message"></span>
          <div class="input-fields">
            <span class="legend">
              <label for="name">Name: </label>
              <input
                type="text"
                name="name"
                id="name"
                placeholder="John"
                required
              />
            </span>

            <span class="legend">
              <label for="surname">Surname: </label>
              <input
                type="text"
                name="surname"
                id="surname"
                placeholder="Doe"
                required
              />
            </span>

            <span class="legend">
              <label for="id">Id: </label>
              <input
                type="text"
                name="id"
                id="id"
                pattern="[0-9]{13}"
                min="13"
                placeholder="2012175333080"
                required
              />
            </span>

            <span class="legend">
              <label for="cellno">Cell-no: </label>
              <input
                type="text"
                name="cellno"
                id="cellno"
                placeholder="012-345-6789"
                required
              />
            </span>

            <span class="legend">
              <label for="email">Email: </label>
              <input
                type="email"
                name="email"
                id="email"
                placeholder="example@example.com"
                required
              />
            </span>

            <span class="legend">
              <label for="branch">Branch: </label>
              <select name="branch" id="branch">
                <option value="Tshwane">Tshwane</option>
                <option value="Johannesburg">Johannesburg</option>
                <option value="Gauteng Provincial Office">
                  Gauteng Provincial Office
                </option>
                <option value="Ekurhuleni">Ekurhuleni</option>
                <option value="Mamelodi">Mamelodi</option>
                <option value="Attredgeville">Attredgeville</option>
                <option value="Olievenhoutbosch">Olievenhoutbosch</option>
                <option value="Cullinan">Cullinan</option>
                <option value="Bronkhorspruit">Bronkhorspruit</option>
                <option value="Mabopane">Mabopane</option>
              </select>
            </span>

            <span class="legend">
              <label for="reason-for-visit">Reason for visit: </label>
              <textarea
                cols="80"
                type="text"
                name="reason"
                id="reason-for-visit"
                placeholder="Reason for visit"
                required
              ></textarea>
            </span>
          </div>

          <button type="submit" id="form-submit">Submit</button>
        </form>
      </main>
    </div>

    <div class="side-menu-container">
      <div class="side-menu">
        <div class="side-menu-block">
          <svg
            class="side-menu-back-arrow"
            width="800px"
            height="800px"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <title />

            <g id="Complete">
              <g id="arrow-left">
                <g>
                  <polyline
                    data-name="Right"
                    fill="none"
                    id="Right-2"
                    points="7.6 7 2.5 12 7.6 17"
                    stroke="#d8d8d8"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                  />

                  <line
                    fill="none"
                    stroke="#d8d8d8"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    x1="21.5"
                    x2="4.8"
                    y1="12"
                    y2="12"
                  />
                </g>
              </g>
            </g>
          </svg>
        </div>

        <ul>
          <li>
            <form action="/" method="get">
              <button class="btn-no-styles" type="submit" id="form-submit">
                Register Visitor
              </button>
            </form>
          </li>
          <li>
            <form action="/" method="get">
              <button class="btn-no-styles" type="submit" id="form-submit">
                Create Event
              </button>
            </form>
          </li>
          <li>
            <form action="/" method="get">
              <button class="btn-no-styles" type="submit" id="form-submit">
                Register Guest
              </button>
            </form>
          </li>
          <li>
            <form action="/" method="get">
              <button class="btn-no-styles" type="submit" id="form-submit">
                Logout
              </button>
            </form>
          </li>
        </ul>
      </div>
    </div>

    <footer>
      <h3>Contact Us</h3>
      <br />
      Physical Address: The Fields, Office Block A, 1066 Burnett Street Hatfield
      0833 Pretoria Postal Address: P.O Box 56714, Arcadia, 0007 Tel: +27 12 441
      1000 Fax: +27 12 441 2064

      <br />
      <br />
      <strong>National Information Centre</strong>
      <br />
      <strong>Tel: </strong>0860 103 703
      <br />
      <strong>Email: </strong
      ><a href="mailto:info@seda.org.za">info@seda.org.za</a>
    </footer>
    <script>
      const btn = document.getElementById("menu-btn");
      const backBtn = document.querySelector(".side-menu-back-arrow");
      const sideMenu = document.querySelector(".side-menu-container");

      backBtn.addEventListener("click", () => {
        sideMenu.style.display = "none";
      });

      btn.addEventListener("click", () => {
        sideMenu.style.display = "block";
      });
    </script>
  </body>
</html>
